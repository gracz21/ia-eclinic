.container
  %h1 Listing clinics

  .row
    - if current_admin
      .col-md-2
        %h4 Menu
        %ul.nav.nav-pills.nav-stacked
          %li.active{ :role => "presentation" }= link_to 'New Clinic', new_clinic_path


    .col-md-10
      %table.table.table-striped
        %thead
          %tr
            %th Name
            - if !current_admin
              %th
              %th
              %th
      
        %tbody
          - @clinics.each do |clinic|
            %tr
              %td= clinic.name
              - if current_admin
                %td= link_to 'Show', clinic, :class => "btn btn-default"
                %td= link_to 'Edit', edit_clinic_path(clinic), :class => "btn btn-default"
                %td= link_to 'Destroy', clinic, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-default"
