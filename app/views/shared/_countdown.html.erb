<script type="text/javascript">
  var i = <%= raw i.to_json %>
  var date = <%= raw date.to_json %>
  $('#appointment_' + i).countdown(date)
	.on('update.countdown', function(event) {
	    $(this).html(event.strftime('Confirm %M:%S'));
	})
	.on('finish.countdown', function(event) {
		$(this).html(event.strftime('Confirm %M:%S'));
		$('#appointment_' + i).removeAttr("href");
		$('#appointment_' + i).removeAttr('data-method');
	});
</script>