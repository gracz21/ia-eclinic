= form_tag session_path(:patient) do
  = text_field_tag 'patient[email]', nil, :class => "form-control", :placeholder => "Email"
  = password_field_tag 'patient[password]', nil, :class => "form-control", :placeholder => "Password"
  = check_box_tag 'patient[remember_me]'
  = label_tag 'patient[remember_me]', 'Remember me'
  %br
  %button.btn.btn-lg.btn-primary Sign in
  %br
  = link_to "Forgot your password?", new_password_path(:patient)